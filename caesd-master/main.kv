                background_color: 1, 1, 1, 0
                on_press: root.manager.current = 'launch_screen'
            Label:
                text: 'Power Distribution'
                text_size: self.size
                color: 0, 0, 0, 1
                halign: 'left'
                valign: 'middle'
            Button:
                size_hint_x: 0.22
                text: 'Distribution'
                color: 0, 0, 0, 1
                background_color: 1, 1, 1, 0.5
                on_press: root.manager.current = 'power_screen_one'
            Button:
                size_hint_x: 0.22
                text: 'Illumination'
                color: 0, 0, 0, 1
                background_color: 1, 1, 1, 0
                on_press: root.manager.current = 'illumination_screen'
            Button:
                size_hint_x: 0.2
                text: 'CCTV'
                color: 0, 0, 0, 1
                background_color: 1, 1, 1, 0
                on_press: root.manager.current = 'cctv_screen'
            Button:
                size_hint_x: 0.2
                text: 'Earthing'
                color: 0, 0, 0, 1
                background_color: 1, 1, 1, 0
                on_press: root.manager.current = 'earthing_screen'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.7
            pos_hint: {'center_x':.5, 'center_y': .5}
            padding: 0,5,0,0
            StackLayout:
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (1, 0.6)
                    padding: 0,5,0,0
                    StackLayout:
                        orientation: 'bt-lr'
                        canvas.before:
                            Color:
                                rgba: 1, 1, 0.6, 0.8
                            Rectangle:
                                pos: self.pos
                                size: self.size
                            Color:
                                rgba: .5, .5, .5, 1
                            Line:
                                width: 2
                                rectangle: self.x, self.y, self.width, self.height
                        BoxLayout:
                            size_hint: (1, 0.7)
                            padding: 0,5,0,0
                            StackLayout:
                                BoxLayout:
                                    size_hint: (1, 0.25)
                                    Label:
                                        id: disp_power_two_screen
                                BoxLayout:
                                    size_hint: (1, 0.1)
                                    padding: 5,0,5,0
                                    canvas.before:
                                        Color:
                                            rgba:  0.0, 0.2, 0.95, 1
                                        Rectangle:
                                            pos: self.pos
                                            size: self.size
                                    Label:
                                        id: disp_machine_list_header
                                        text: 'List of Machines'
                                        disabled: True
                                        halign: 'center'
                                        valign: 'middle'
                                RecycleView:
                                    id: disp_machine_screen
                                    bar_width: '10dp'
                                    scroll_type: ['bars', 'content']
                                    viewclass: 'SelectableLabel'
                                    SelectableRecycleBoxLayout:
                                        orientation: 'vertical'
                                        default_size: self.width, 30
                                        default_size_hint: 1, None
                                        size_hint_y: None
                                        height: self.minimum_height
                                        spacing: 2
                    BoxLayout:
                        size_hint: (1, 0.16)
                        padding: 0,5,0,0
                        Button:
                            id: butt_all_machines
                            text: 'All Machines'
                            background_color: 0.0, 0.36, 0.95, 1
                            disabled: True
                            on_press:
                                root.displayPanelBoard(butt_all_machines.text)
                        Spinner:
                            id: drop_view_machine_section
                            text: 'View Machine Sections'
                            values: ['Ade']
                            background_color: 0.0, 0.36, 0.95, 1
                            disabled: True
                            on_press:
                                root.selectMachineSection()
                            on_text:
                                root.displayPanelBoard(drop_view_machine_section.text)
                StackLayout:
                    BoxLayout:
                        size_hint: (1, 0.07)
                        FormLabel:
                            id: machine_out_of_num
                    BoxLayout:
                        size_hint: (1, 0.08)
                        padding: 0,5,0,0
                        FormLabel:
                            id: machine_name_name
                            text: 'Name for Machine 1'
                        FormInput:
                            id: machine_name_input
                            text: 'Machine 1'
                    BoxLayout:
                        size_hint: (1, 0.08)
                        padding: 0,5,0,0
                        FormLabel:
                            text: 'Power (load) in kVA'
                        FormInput:
                            id: machine_load
                    BoxLayout:
                        size_hint: (1, 0.08)
                        padding: 0,5,0,0
                        FormLabel:
                            text: 'Power factor'
                        FormInput:
                            id: machine_factor
                            text: '0.8'
                    BoxLayout:
                        size_hint: (1, 0.08)
                        padding: 0,5,0,0
                        Spinner:
                        #Display a button for machine section
                            id: drop_select_machine_section
                            text: 'Select Machine Section'
                            values: []
                            background_color: 0.0, 0.36, 0.95, 1
                            on_press:
                                root.selectMachineSection()
                        Button:
                            id: butt_add_machines
                            text: 'Add Machine'
                            background_color: 0.0, 0.36, 0.95, 1
                            on_press:
                                root.addMachineParameters(machine_name_input.text, machine_load.text, drop_select_machine_section.text)


