#: import FadeTransiton kivy.uix.screenmanager.FadeTransition
<SelectableLabel>:
    machine_name: ''
    machine_load: ''
    breaker_size: ''
    cable_size: ''
    canvas.before:
        Color:
            rgba: (0.0, 0.36, 0.95, 1) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    text: root.machine_name+'   Load('+root.machine_load+'kVA)   Breaker('+root.breaker_size+'A)   Cable('+root.cable_size+'mm2)'

CAESDApp:
    transition: FadeTransiton()
    LaunchPage:
    CctvPage:
    EarthingPage:
    PowerPage_one:
    PowerPage_two:
    IlluminationPage:

<FormLabel@Label>:
    font_size: self.height/2.5
    color: 0, 0, 0, 1
<FormInput@TextInput>:
    write_tab: False
    multiline: False
    keyboard_suggestions: False
    allow_copy: False
    font_size: self.height/1.8
    size_hint: (0.8, 1)
    color: 0, 0, 0, 1
    #background_color:  0.2,0.2,0.4,0.4
    #border_color: 0,0,0,1
    cursor_color: [0,0,0,1]
    #cursor_height: self.height/1.5
    halign: 'center'
    valign: 'middle'

<LaunchPage>:
    name: "launch_screen"
    canvas.before:
        Color:
            rgba: 0.86, 0.95, 1.0, 1.0
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        padding: 50
        height: "450dp"
        size_hint_y: None
        pos_hint: {'center_x':.5, 'center_y': .5}
        Label:
            text: "Computer Aided Electrical Services Design"
            font_size: 60
            color: 0.05, 0.12, 0.41, 1
            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]
            halign: 'center'
        Label:
            text: "(Power Distribution | Illumination | CCTV | Earthing)"
            font_size: 25
            color: 0.05, 0.12, 0.41, 1
            text_size: self.width, None
            height: self.texture_size[1]
            halign: 'center'
        Label:
            text: "APANTAKU, Ayomide 20141890"
            font_size: 20
            color: 0.05, 0.12, 0.41, 1
        Button:
            text: "APPLICATION"
            font_size: 25
            background_color: 0.0, 0.36, 0.95, 1
            on_press: root.manager.current = 'power_screen_one'

<PowerPage_one>:
    name: 'power_screen_one'
    numMachines: num_machines
    numSections: num_sections
    normalVoltage: normal_voltage
    utilityVoltage: utility_voltage
    growthFactor: growth_factor
    deratingFactor: derating_factor
    loadingFactor: loading_factor
    dispPowerOneError: disp_power_one_error
    buttAddMachines: butt_add_machines
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.86, 0.95, 1.0, 1.0
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.06
            pos_hint: {'top': 1}
            padding: 0, 0, 15, 0
            canvas.before:
                Color:
                    rgba: 0.09, 0.44, 0.96, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                size_hint_x: 0.08
                text: '<'
                font_size: self.height/1.5
                color: 0, 0, 0, 1
                background_color: 1, 1, 1, 0
                on_press: root.manager.current = 'launch_screen'
            Label:
                text: 'Power Distribution'
                text_size: self.size
                color: 0, 0, 0, 1
                halign: 'left'
                valign: 'middle'
            Button:
                size_hint_x: 0.22
                text: 'Distribution'
                color: 0, 0, 0, 1
                background_color: 1, 1, 1, 0.5
                on_press: root.manager.current = 'power_screen_one'
            Button:
                size_hint_x: 0.22
                text: 'Illumination'
                color: 0, 0, 0, 1
                background_color: 1, 1, 1, 0
                on_press: root.manager.current = 'illumination_screen'
            Button:
                size_hint_x: 0.2
                text: 'CCTV'
                color: 0, 0, 0, 1
                background_color: 1, 1, 1, 0
                on_press: root.manager.current = 'cctv_screen'
            Button:
                size_hint_x: 0.2
                text: 'Earthing'
                color: 0, 0, 0, 1
                background_color: 1, 1, 1, 0
                on_press: root.manager.current = 'earthing_screen'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 0.5
            pos_hint: {'center_x':.5, 'center_y': .5}
            padding: 0,25,0,0
            StackLayout:
                BoxLayout:
                    size_hint: (1, 0.09)
                    padding: 0,5,0,0
                    FormLabel:
                        text: "OVERALL MACHINE PARAMETERS"
                BoxLayout:
                    size_hint: (1, 0.05)
                    Label:
                        id: disp_power_one_error
                        text: ''
                BoxLayout:
                    size_hint: (1, 0.09)
                    padding: 0,5,0,5
                    FormLabel:
                        text: "Number of Machines"
                    FormInput:
                        id: num_machines
                BoxLayout:
                    size_hint: (1, 0.09)
                    padding: 0,5,0,5
                    FormLabel:
                        text: "Number of Sections"
                    FormInput:
                        id: num_sections
                BoxLayout:
                    size_hint: (1, 0.09)
                    padding: 0,5,0,5
                    FormLabel:
                        text: "Normal Voltage"
                    FormInput:
                        id: normal_voltage
                        text: '415'
                BoxLayout:
                    size_hint: (1, 0.09)
                    padding: 0,5,0,5
                    FormLabel:
                        text: "Utility Voltage"
                    FormInput:
                        id: utility_voltage
                        text: '11000'
                BoxLayout:
                    size_hint: (1, 0.09)
                    padding: 0,5,0,5
                    FormLabel:
                        text: "Growth factor"
                    FormInput:
                        id: growth_factor
                        text: '1.25'
                BoxLayout:
                    size_hint: (1, 0.09)
                    padding: 0,5,0,5
                    FormLabel:
                        text: "Derating factor"
                    FormInput:
                        id: derating_factor
                        text: '1.25'
                BoxLayout:
                    size_hint: (1, 0.09)
                    padding: 0,5,0,5
                    FormLabel:
                        text: "Load factor"
                    FormInput:
                        id: loading_factor
                        text: '0.8'
                BoxLayout:
                    size_hint: (1, 0.09)
                    padding: 0,5,0,5
                    spacing: 10
                    Button:
                        text: 'Compute Power'
                        background_color: 0.0, 0.36, 0.95, 1
                        on_press:
                            root.calculatePowerInputs(num_machines.text, num_sections.text)
                            #root.selectMachineSection(num_sections.text)
                    Button:
                        id: butt_add_machines
                        text: 'Add Machines'
                        background_color: 0.0, 0.36, 0.95, 1
                        disabled: True
                        on_press:
                            root.manager.current = 'power_screen_two'
                    Button:
                        text: 'Reset'
                        background_color: 0.0, 0.36, 0.95, 1
                        on_press:
                            num_machines.text = ''
                            num_sections.text = ''
                            normal_voltage.text = '415'
                            utility_voltage.text = '11000'
                            growth_factor.text = '1.25'
                            derating_factor.text = '1.25'
                            loading_factor.text = '0.8'

<PowerPage_two>:
    name: 'power_screen_two'
    machineOutOfNum: machine_out_of_num
    machineNameName: machine_name_name
    machineNameInput: machine_name_input
    machineLoad: machine_load
    machineFactor: machine_factor
