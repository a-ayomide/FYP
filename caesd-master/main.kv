                        text: 'Maintenance factor'
                        values: ['0.6', '0.7', '0.8']
                        background_color: 0.5, 0.4, 0.5, 1
                        size_hint_x: 0.8
                        #on_text: root.dropdownsel(drop_machine_section.text)
                BoxLayout:
                    size_hint: (1, 0.09)
                    padding: 0,5,0,5
                    Button:
                        id: butt_calc_light
                        text: 'Calculate Lamps'
                        background_color: 0.5, 0.4, 0.5, 1
